{
	"extends": "@thundercraft5/tsconfig/node-next.tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": "./src",
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "./dist/esm", 
		"lib": [
			"esnext"
		],
		"resolveJsonModule": true,
		"incremental": true,
		"composite": true,
		"skipLibCheck": true,
		"rewriteRelativeImportExtensions": true
	},
	"include": [
		"src/**/*.ts"
, "src/test/index.ts"	]
}