{
	"extends": "@thundercraft5/tsconfig/node18.tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"outDir": "./dist/esm",
		"lib": [
			"esnext"
		],
		"resolveJsonModule": true,
		"incremental": false
	},
	"include": [
		"src/**/*.ts",
		"**/*.js",
	],
	"exclude": [
		"node_modules",
		"./dist/**"
	]
}