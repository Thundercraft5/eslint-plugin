{
	"extends": "@thundercraft5/tsconfig/node18.tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"lib": [
			"esnext"
		],
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"./dist/**"
	]
}